Server

#pragma comment(lib, "ws2_32.lib")
#include <winsock2.h>
#include <iostream>

#pragma warning(disable: 4996)

SOCKADDR_IN addr;
SOCKET Connections[10];
int Counter = 0;

void ClientHandler(int index) {
	int msg_size;
	while (true) {
		int msg_id;
		if (send(Connections[index],"s",0,NULL) != 0) {
			return;
		}
		recv(Connections[index], (char*)&msg_id, sizeof(int), NULL);
		recv(Connections[index], (char*)&msg_size, sizeof(int), NULL);
		char* msg = new char[msg_size + 1];
		msg[msg_size] = '\0';
		recv(Connections[index], msg, msg_size, NULL);
		for (int i = 0; i < Counter; i++) {		// Отправляет сообщение всем клиентам
			if (i == index) {
				continue;
			}
			if (send(Connections[i], (char*)&msg_id, sizeof(int), NULL) < 0) {
				std::cout << "Client ID " << i + 1 << " is logout D(\n";
				continue;
			}

			send(Connections[i], (char*)&msg_size, sizeof(int), NULL);		// Отправка
			send(Connections[i], msg, msg_size, NULL);
		}
		delete[] msg;
	}
}

int id;

int main(int argc, char* argv[]) {
	// Загрузка библиотеки
//WSAStartup
	WSAData wsaData;
	// Запришиваем версию библиотеки WinSock
	WORD DLLVersion = MAKEWORD(2, 1);
	if (WSAStartup(DLLVersion, &wsaData) != 0) {	// Загрузка библиотеки
		std::cout << "Error" << std::endl;
		exit(1);
	}
	// Инф об адресе сокета => Имя
	int sizeofaddr = sizeof(addr);					// Перем с размером структ sockaddr
	addr.sin_addr.s_addr = inet_addr("127.0.0.1");	// Локальный адрес
	addr.sin_port = htons(1111);					// Порт
	addr.sin_family = AF_INET;						// Семейство интернет протоколов

	SOCKET sListen = socket(AF_INET, SOCK_STREAM, NULL);	// Создание сокета с парам (семейст инт прот , протокол)
	bind(sListen, (SOCKADDR*)&addr, sizeof(addr));			// Привязка адреса сокету
	listen(sListen, SOMAXCONN);								// Прослушивание (макс доп число запросов)

	SOCKET newConnection;									// Новый сокет
	for (int i = 0; i < 10; i++) {
		newConnection = accept(sListen, (SOCKADDR*)&addr, &sizeofaddr);		// Новый сокет (сокет, структура, ссылка на разм структ)

		if (newConnection == 0) {
			std::cout << "Error #2\n";				// Подключился ли клиент
		}
		else {
			std::cout << "Client Connected!\n";
			id = i;
			send(newConnection, (char*)&id, sizeof(int), NULL);
			std::cout << "Client's ID is: " << id + 1 << "\n";
			Connections[i] = newConnection;
			Counter++;
			CreateThread(NULL, NULL, (LPTHREAD_START_ROUTINE)ClientHandler, (LPVOID)(i), NULL, NULL);
			// Создание потока для функции с индексом i  
			// Последний NULL отвечает за нумерацию потока

		}
	}

	system("pause");
	return 0;
}


Client

#pragma comment(lib, "ws2_32.lib")
#include <winsock2.h>
#include <iostream>
#include <string>
#pragma warning(disable: 4996)

SOCKET Connection;

void ClientHandler() {
	int msg_size;
	while (true) {
		int msg_id;
		recv(Connection, (char*)&msg_id, sizeof(int), NULL);
		std::cout << "ID " << msg_id << ":\n";
		msg_id++;
		recv(Connection, (char*)&msg_size, sizeof(int), NULL);
		char* msg = new char[msg_size + 1];
		msg[msg_size] = '\0';
		recv(Connection, msg, msg_size, NULL);
		std::cout << msg << "\n\n";
		delete[] msg;
	}
}

int id;

int main(int argc, char* argv[]) {
	//WSAStartup
	WSAData wsaData;
	WORD DLLVersion = MAKEWORD(2, 1);
	if (WSAStartup(DLLVersion, &wsaData) != 0) {
		std::cout << "Error" << std::endl;
		exit(1);
	}

	SOCKADDR_IN addr;
	int sizeofaddr = sizeof(addr);
	addr.sin_addr.s_addr = inet_addr("127.0.0.1");
	addr.sin_port = htons(1111);
	addr.sin_family = AF_INET;

	Connection = socket(AF_INET, SOCK_STREAM, NULL);
	if (connect(Connection, (SOCKADDR*)&addr, sizeof(addr)) != 0) {
		std::cout << "Error: failed connect to server.\n";
		return 1;
	}
	std::cout << "Connected!\n";

	recv(Connection, (char*)&id, sizeof(int), NULL);
	std::cout << "Your ID is: " << id + 1 << "\n";

	CreateThread(NULL, NULL, (LPTHREAD_START_ROUTINE)ClientHandler, NULL, NULL, NULL);

	std::string msg;
	while (true) {
		std::getline(std::cin, msg);
		std::cout << "\n";
		int msg_size = msg.size();

		send(Connection, (char*)&id, sizeof(int), NULL);

		send(Connection, (char*)&msg_size, sizeof(int), NULL);
		send(Connection, msg.c_str(), msg_size, NULL);
		Sleep(10);
	}

	system("pause");
	return 0;
}
